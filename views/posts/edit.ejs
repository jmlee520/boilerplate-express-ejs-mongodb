<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align: center;">Edit <%= post.name %></h1>
      <div style="width: 30%; margin: 25px auto;">
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="post[name]" placeholder="name" value="<%= post.name %>" >
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="post[image]" placeholder="image url" value="<%= post.image %>" >
          </div>
          <div class="form-group">
            <textarea class="form-control" name="post[description]" value="<%= post.description %>" > </textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block"> submit </button>
          </div>

        </form>
        <a href="/posts"> Go Back </a>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>

